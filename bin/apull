#!/usr/bin/python3

import os
import sys
import yaml
import autossh.ssh

if len(sys.argv) < 4:
    print("")
    print("Usage:")
    print("  apull [target] [src - remote path] [dst - local path]")
    print("")
    sys.exit(0)

target = sys.argv[1]
src = sys.argv[2]
dst = sys.argv[3]

s = autossh.ssh.new(sys.argv[1])
ok, err = s.pull_file(src, dst)
if not ok:
    print(err)
    sys.exit(1)
s.close()

