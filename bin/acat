#!/usr/bin/env python

'''
Usage:
    acat            - Cat all hosts.
    acat [target]   - Cat target host.
'''

import os
import sys
import yaml
import autossh

config_file = os.path.expanduser("~/.config/autossh/config.yaml")

target = ""
if len(sys.argv)>=2:
    target = sys.argv[1]

## Load configure file
f = open(config_file)
c = yaml.load(f)
f.close()

if len(target)>0:
    hl = autossh.hostlookup.HostLookup()
    ok, n = hl.loadFromFile(os.path.expanduser(c["hosts"]["file"]))
    if not ok:
        print "[Warning] Load host entry file", c["hosts"]["file"], "fail. You can touch one."
    ok, info = hl.get(target)
    if not ok:
        print "Target not found: '%s' "%(target) 
        sys.exit(1)
    print info
else:
    content = ""
    try:
        f = open(os.path.expanduser(c["hosts"]["file"]))
        content = f.read()
        f.close()
    except IOError, e:
        print "[Warning] Load host entry file", c["hosts"]["file"], "fail. You can touch one."
    print content


